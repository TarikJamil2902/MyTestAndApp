<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#BA7C7C"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/listName"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/listEmail"
            android:text="Email"
            android:textSize="16sp"
            android:layout_toEndOf="@id/listName"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/listDob"
            android:text="time"
            android:textSize="16sp"
            android:layout_toEndOf="@id/listEmail"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/listDelete"
            android:textSize="16sp"
            android:drawableLeft="@drawable/baseline_delete_24"
            android:layout_toEndOf="@id/listDob"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/listUpdate"
            android:textSize="16sp"
            android:drawableLeft="@drawable/baseline_delete_24"
            android:layout_toEndOf="@id/listDelete"
            android:layout_marginTop="25dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>